    "cssRules" : [
        { "selector" : "--color-1",     "rule" : "red" },
        { "selector" : "--color-2",     "rule" : "#211" },
        { "selector" : "--color-3",     "rule" : "#fff" },
        {
            "selector" : ".titleHeader, .class-table-title, .onboarding-header, .class-features-header, .class-feature-header, .menu-label, .class-button",
            "rule" : "color: var(--color-1); font-weight: bold"
        },
        {
            "selector" : ".class-button:hover",
            "rule" : "color: var(--color-2);"
        },
        {
            "selector" : "a, .text-label, .divider-label, .subheader, .core-table-title",
            "rule" : "color: var(--color-3)"
        },
        {
            "selector" : "tbody > tr > *",
            "rule" : "border: 0"
        },
        {
            "selector" : ".core-table-title",
            "rule" : "border-bottom: 3px solid var(--color-3) !important"
        },
        {
            "selector" : ".table-header> *, .onboarding-header, .core-table-title, .class-features-header",
            "rule" : "border-bottom: 3px solid var(--color-1)"
        },
        {
            "selector" : ".class-button",
            "rule" : "background: var(--color-2); border: 1px solid var(--color-1);"
        },
        {
            "selector" : ".class-button:hover",
            "rule" : "background: var(--color-1);"
        }
